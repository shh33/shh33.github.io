// Post Expanded
// --------------------------------------------------
.posts-expand {
  padding-top: 0;

  .post-title, .post-meta {
    //text-align: $site-meta-text-align;
    text-align: center;

    +mobile() {
      text-align: center;
    }
  }

  .post-eof {
    display: none;
  }

  .post {
    margin-top: 120px;
  }

  .post:first-child {
    margin-top: 0;
  }

  .post-meta {
    margin-bottom: 20px;
    margin-top: 5px;
  }

  .post-title:hover::before {
    background: $black-deep;
  }

  .post-body img {
    margin-left: 0;
  }

  .post-tags {
    text-align: left;

    a {
      background: $whitesmoke;
      border-bottom: none;
      padding: 1px 5px;
    }

    a:hover {
      background: $grey-light;
    }
  }

  .post-nav {
    margin-top: 40px;
  }
}

.post-button {
  margin-top: 20px;
  text-align: center;

  a {
    // color: $grey-dim;
    //background: none;
    //border: none;
    //border-bottom: 2px solid $grey-dim;
    //font-size: $font-size-small;
    //padding: 0;
    //transition-property: border;

    color: #555;
    font-size: 14px;
    background: #fff;
    border-radius: 2px;
    line-height: 2;

    &:hover {
      //border-bottom-color: $black-deep;

      color: #fff;
      background: #222;
      border: 2px solid #222;
      border-radius: 0;
      transition-property: background-color;
    }
  }
}
